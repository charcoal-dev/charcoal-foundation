{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:charcoal:foundation:schemas:globals:imports:1.0.0",
  "title": "Global $imports",
  "type": "object",
  "$defs": {
    "imports": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "pattern": "^(?!/)[A-Za-z0-9_.-/]+\\.json$"
          },
          {
            "enum": [false]
          }
        ]
      }
    }
  },
  "patternProperties": {
    "^\\$imports$": {
      "$ref": "#/$defs/imports"
    }
  },
  "unevaluatedProperties": true
}