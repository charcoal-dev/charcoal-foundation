{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:charcoal:foundation:schemas:presets:cors:1.0.0",
  "title": "CORS preset",
  "type": "object",
  "properties": {
    "$imports": {
      "$ref": "../globals/imports.schema.json#/$defs/imports"
    },
    "enforced": {
      "type": "boolean",
      "default": false
    },
    "maxAge": {
      "type": "integer",
      "minimum": 0
    },
    "origins": {
      "type": "array",
      "items": {
        "type": "string",
        "anyOf": [
          {
            "pattern": "^\\*$"
          },
          {
            "pattern": "^https?://[^\\s]+$"
          }
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": ["enforced", "maxAge", "origins"],
  "additionalProperties": false
}