{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:charcoal:foundation:schemas:presets:host:1.0.0",
  "title": "Host preset",
  "type": "object",
  "properties": {
    "$imports": {
      "$ref": "../globals/imports.schema.json#/$defs/imports"
    },
    "hostname": {
      "type": "string",
      "pattern": "^(?=.{1,253}$)(?:(?:[A-Za-z0-9](?:[A-Za-z0-9-]{0,61}[A-Za-z0-9])?)\\.)*(?:[A-Za-z0-9](?:[A-Za-z0-9-]{0,61}[A-Za-z0-9])?)$"
    },
    "ports": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 1,
        "maximum": 65535
      },
      "uniqueItems": true
    }
  },
  "required": ["hostname"],
  "additionalProperties": false
}