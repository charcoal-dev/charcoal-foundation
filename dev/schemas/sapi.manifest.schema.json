{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:charcoal:foundation:schemas:dev:manifest:sapi:1.0.0",
  "title": "SAPI Manifest",
  "type": "object",
  "properties": {
    "charcoal": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sapi": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "enabled": { "type": "boolean" },
              "id": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_]+$"
              },
              "root": {
                "type": "string",
                "pattern": "^/[A-Za-z0-9._-]+(?:/[A-Za-z0-9._-]+)*$",
                "description": "Absolute path inside container"
              },
              "port": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "env": {
                "type": "object",
                "propertyNames": {
                  "type": "string",
                  "pattern": "^[\\u0020-\\u007E]+$"
                },
                "additionalProperties": {
                  "type": "string",
                  "pattern": "^[\\u0020-\\u007E]+$"
                },
                "description": "String-to-string map; keys and values must be printable ASCII"
              }
            },
            "patternProperties": {
              "^type$": {
                "type": "string",
                "enum": ["cli", "http"]
              }
            },
            "required": ["id", "type", "root"]
          }
        }
      },
      "required": ["sapi"]
    }
  },
  "patternProperties": {
    "^\\$schema$": { "type": "string" }
  },
  "additionalProperties": false
}