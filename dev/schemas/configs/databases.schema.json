{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:charcoal:foundation:schemas:configs:databases:1.0.0",
  "title": "Databases Configuration",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^\\$schema$": { "type": "string", "format": "uri" }
  },
  "required": ["databases"],
  "properties": {
    "databases": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["driver", "database"],
        "properties": {
          "driver": {
            "type": "string",
            "enum": ["mysql", "sqlite"]
          },
          "host": {
            "type": "string",
            "oneOf": [
              { "format": "ipv4" },
              { "format": "hostname" }
            ]
          },
          "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
          },
          "database": {
            "type": "string",
            "minLength": 1
          },
          "username": {
            "type": "string",
            "minLength": 1
          },
          "password": {
            "type": ["string", "null"]
          },
          "connection": {
            "type": "string",
            "enum": ["lazy", "default", "onDemand"]
          }
        }
      }
    }
  }
}
