{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:charcoal:foundation:schemas:configs:charcoal:1.0.0",
  "title": "Charcoal Framework Config",
  "type": "object",
  "patternProperties": {
    "^\\$schema$": { "type": "string", "format": "uri" }
  },
  "properties": {
    "charcoal": {
      "type": "object",
      "properties": {
        "$imports": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(?!/)[A-Za-z0-9_./-]+$"
          }
        },
        "timezone": {
          "type": "string",
          "minLength": 1
        },
        "http": {
          "type": "object",
          "properties": {
            "sapi": {
              "type": "object",
              "properties": {
                "$imports": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "^(?!/)[A-Za-z0-9_./-]+$"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["timezone"],
      "additionalProperties": false
    }
  },
  "required": ["charcoal"],
  "additionalProperties": false
}