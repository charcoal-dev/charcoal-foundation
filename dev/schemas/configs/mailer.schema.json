{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:charcoal:foundation:schemas:configs:mailer:1.0.0",
  "title": "Mailer Module Configuration",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^\\$schema$": { "type": "string", "format": "uri" }
  },
  "required": [
    "mailer"
  ],
  "properties": {
    "mailer": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "transport",
        "policy",
        "sender",
        "queue"
      ],
      "properties": {
        "transport": {
          "type": "string",
          "enum": [
            "disabled",
            "smtp"
          ]
        },
        "policy": {
          "type": "string",
          "enum": [
            "queue_only",
            "send_and_log",
            "send_only"
          ]
        },
        "sender": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "name",
            "email"
          ],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "email": {
              "type": "string",
              "format": "email"
            }
          }
        },
        "queue": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "processing",
            "retryTimeout",
            "exhaustAfter",
            "tickInterval"
          ],
          "properties": {
            "processing": {
              "type": "boolean"
            },
            "retryTimeout": {
              "type": "integer",
              "minimum": 1,
              "maximum": 3600
            },
            "exhaustAfter": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100
            },
            "tickInterval": {
              "type": "integer",
              "minimum": 1,
              "maximum": 60
            }
          }
        }
      }
    }
  }
}