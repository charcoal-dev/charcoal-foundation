{
  "$schema": "schemas/sapi.manifest.schema.json",
  "charcoal": {
    "sapi": [
      {
        "enabled": true,
        "id": "engine",
        "type": "cli",
        "root": "/engine",
        "env": {
          "CHARCOAL_SAPI_DEPTH": "1"
        }
      },
      {
        "enabled": true,
        "nginxGenerateConfig": true,
        "id": "web",
        "type": "http",
        "root": "/web/public_html",
        "dnat": {
          "tls": 7000,
          "insecure": 6000
        },
        "env": {
          "CHARCOAL_SAPI_DEPTH": "2"
        }
      }
    ]
  }
}