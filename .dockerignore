# VCS & meta
.git
.gitignore
.gitattributes
.dockerignore

# IDE / OS
.idea/
.vscode/
.DS_Store
Thumbs.db

# Tests & docs (not needed at build)
tests/**
docs/**

# Runtime data (mounted at runtime)
var/**
!var/storage/
!var/storage/seed/**
!var/storage/defaults/**
!var/**/.gitkeep

# Local vendors (containers build their own)
vendor/**
app/vendor/**

# Local env & compose overrides
dev/.env

# Ignore most of dev/, then re-include what's needed for image builds
dev/**
!dev/docker/sapi/**
!dev/docker/utils/redis/**
!dev/composer.json
!dev/composer.lock

# Node (if present)
node_modules/
